<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Version>$(SideScrollVersion)</Version>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Description>$(SideScrollDescription)</Description>
    <RepositoryUrl>$(SideScrollRepositoryUrl)</RepositoryUrl>
    <Authors>$(SideScrollAuthors)</Authors>
    <Copyright>$(SideScrollCopyright)</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>$(SideScrollPackageProjectUrl)</PackageProjectUrl>
    <PackageTags>$(SideScrollPackageTags)</PackageTags>
    <PackageIcon>$(SideScrollPackageIcon)</PackageIcon>
    <PackageReadmeFile>README.NuGet.md</PackageReadmeFile>
    <PackageReleaseNotes>$(SideScrollPackageReleaseNotes)</PackageReleaseNotes>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\Images\Logo\png\SideScroll_128.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\README.NuGet.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia.Desktop" Version="$(AvaloniaVersion)" />
    <PackageReference Include="System.Drawing.Common" Version="8.0.7" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SideScroll\SideScroll.csproj" />
    <ProjectReference Include="..\SideScroll.UI.Avalonia\SideScroll.UI.Avalonia.csproj" />
  </ItemGroup>

</Project>
