<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sidescroll="clr-namespace:SideScroll.UI.Avalonia.Charts.LiveCharts;assembly=SideScroll.UI.Avalonia.Charts.LiveCharts">

  <ControlTheme x:Key="{x:Type sidescroll:TabControlLiveChart}" TargetType="sidescroll:TabControlLiveChart">
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="VerticalAlignment" Value="Stretch"/>
    <Setter Property="Background" Value="{DynamicResource ChartBackgroundBrush}" />
  </ControlTheme>
</ResourceDictionary>