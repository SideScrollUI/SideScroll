<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sidescroll="clr-namespace:SideScroll.Avalonia.Controls.View;assembly=SideScroll.Avalonia">

  <ControlTheme x:Key="{x:Type sidescroll:TabView}" TargetType="sidescroll:TabView">
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="VerticalAlignment" Value="Stretch"/>
    <Setter Property="Background" Value="{DynamicResource TabBackgroundBrush}" />
  </ControlTheme>
  
  <ControlTheme x:Key="{x:Type sidescroll:TabViewTitle}" TargetType="sidescroll:TabViewTitle">
    <Setter Property="Background" Value="{DynamicResource TitleBackgroundBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="BorderBrush" Value="{DynamicResource TitleBorderBrush}"/>
    <Setter Property="TextElement.Foreground" Value="{DynamicResource TitleForegroundBrush}"/>
    <Setter Property="TextElement.FontSize" Value="{DynamicResource TitleFontSize}"/>
  </ControlTheme>
</ResourceDictionary>