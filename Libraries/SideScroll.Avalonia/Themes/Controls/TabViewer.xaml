<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sidescroll="clr-namespace:SideScroll.Avalonia.Controls.Viewer;assembly=SideScroll.Avalonia">

  <ControlTheme x:Key="{x:Type sidescroll:TabViewer}" TargetType="sidescroll:TabViewer">
    
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="VerticalAlignment" Value="Stretch"/>
    <Setter Property="Background" Value="{DynamicResource TabBackgroundBrush}"/>
        
  </ControlTheme>
</ResourceDictionary>