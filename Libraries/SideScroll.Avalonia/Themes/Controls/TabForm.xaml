<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sidescroll="clr-namespace:SideScroll.Avalonia.Controls;assembly=SideScroll.Avalonia">

  <ControlTheme x:Key="{x:Type sidescroll:TabForm}" TargetType="sidescroll:TabForm">
    <Setter Property="BorderThickness" Value="0,1,0,1"/>
    <Setter Property="BorderBrush" Value="{DynamicResource TabSectionSeparatorBrush}"/>
  </ControlTheme>
</ResourceDictionary>