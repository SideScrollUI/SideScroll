<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sidescroll="clr-namespace:SideScroll.Avalonia.Charts.LiveCharts;assembly=SideScroll.Avalonia.Charts.LiveCharts">

  <ControlTheme x:Key="{x:Type sidescroll:TabLiveChart}" TargetType="sidescroll:TabLiveChart">
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="VerticalAlignment" Value="Stretch"/>
    <Setter Property="Background" Value="{DynamicResource ChartBackgroundBrush}" />
    <Setter Property="BorderBrush" Value="{DynamicResource ChartBorderBrush}" />
    <Setter Property="BorderThickness" Value="{DynamicResource ChartBorderThickness}" />
  </ControlTheme>
</ResourceDictionary>