<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:atlas="clr-namespace:Atlas.UI.Avalonia.Controls;assembly=Atlas.UI.Avalonia">

  <ControlTheme x:Key="{x:Type atlas:TabControlSplitContainer}" TargetType="atlas:TabControlSplitContainer">
    <Setter Property="Background" Value="{DynamicResource TabBackgroundBrush}"/>
    <Style Selector="^:pointerover">
      <Setter Property="Background" Value="{DynamicResource TabBackgroundFocusedBrush}" />
    </Style>
    <Style Selector="^:focused">
      <Setter Property="Background" Value="{DynamicResource TabBackgroundFocusedBrush}" />
    </Style>
  </ControlTheme>
</ResourceDictionary>