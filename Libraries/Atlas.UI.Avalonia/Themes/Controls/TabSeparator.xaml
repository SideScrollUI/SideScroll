<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:atlas="clr-namespace:Atlas.UI.Avalonia.Controls;assembly=Atlas.UI.Avalonia">

  <ControlTheme x:Key="{x:Type atlas:TabSeparator}" TargetType="atlas:TabSeparator">
    <Setter Property="Background" Value="{DynamicResource TabSeparatorForegroundBrush}"/>
    <Setter Property="Margin" Value="8"/>
    <Setter Property="Height" Value="1"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
  </ControlTheme>
</ResourceDictionary>