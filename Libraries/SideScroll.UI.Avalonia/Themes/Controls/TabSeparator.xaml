<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:sidescroll="clr-namespace:SideScroll.UI.Avalonia.Controls;assembly=SideScroll.UI.Avalonia">

  <ControlTheme x:Key="{x:Type sidescroll:TabSeparator}" TargetType="sidescroll:TabSeparator">
    <Setter Property="Background" Value="{DynamicResource TabSeparatorForegroundBrush}"/>
    <Setter Property="Margin" Value="8"/>
    <Setter Property="Height" Value="1"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
  </ControlTheme>
</ResourceDictionary>