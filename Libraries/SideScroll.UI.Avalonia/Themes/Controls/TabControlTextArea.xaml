<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sidescroll="clr-namespace:SideScroll.UI.Avalonia.Controls;assembly=SideScroll.UI.Avalonia">

  <ControlTheme x:Key="{x:Type sidescroll:TabControlTextArea}" TargetType="sidescroll:TabControlTextArea">
    <Setter Property="Background" Value="{DynamicResource TextAreaBackgroundBrush}"/>
    <Setter Property="BorderBrush" Value="Black"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="VerticalAlignment" Value="Top"/>
    <Setter Property="MinWidth" Value="50"/>
    <Setter Property="Margin" Value="6"/>
    <Setter Property="Padding" Value="6, 3"/>
  </ControlTheme>
</ResourceDictionary>