<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:sidescroll="clr-namespace:SideScroll.UI.Avalonia.Controls;assembly=SideScroll.UI.Avalonia">

  <ControlTheme x:Key="{x:Type sidescroll:TabControlTitle}" TargetType="sidescroll:TabControlTitle">
    <Setter Property="Background" Value="{DynamicResource TitleBackgroundBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="BorderBrush" Value="Black"/>
    <Setter Property="TextElement.Foreground" Value="{DynamicResource TitleForegroundBrush}"/>
    <Setter Property="TextElement.FontSize" Value="{DynamicResource TitleFontSize}"/>
  </ControlTheme>
</ResourceDictionary>