<Project>
  <PropertyGroup>
    <AvaloniaVersion>11.0.11</AvaloniaVersion>
    <AvaloniaEditVersion>11.0.6</AvaloniaEditVersion>
  </PropertyGroup>

  <PropertyGroup>
    <Version>0.3</Version>
    <PackageReleaseNotes>Simplified build and packaging</PackageReleaseNotes>

    <TargetFramework>net8.0</TargetFramework>
    <Configurations>Debug;Release;DebugX86</Configurations>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <Description>SideScroll is a cross platform AvaloniaUI library for navigating sideways through a tree of Tabs. Multiple paths can viewed at once, and new tabs will load as you scroll to the right.</Description>
    <RepositoryUrl>https://github.com/SideScrollUI/SideScroll</RepositoryUrl>
    <Authors>SideScroll UI</Authors>
    <Copyright>SideScroll UI</Copyright>

    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/SideScrollUI/SideScroll</PackageProjectUrl>
    <PackageTags>sidescroll;sidescrollui;avalonia;avaloniaui</PackageTags>
    <PackageIcon>SideScroll_128.png</PackageIcon>
    <PackageReadmeFile>README.NuGet.md</PackageReadmeFile>

    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>
</Project>
